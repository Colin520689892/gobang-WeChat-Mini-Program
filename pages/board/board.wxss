  height: 700rpx;
  width: 700rpx;
  margin: 20rpx auto;
  padding: 14rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}


#board {
  height: 674rpx;
  width: 674rpx;
  border: 2rpx solid black;
  box-sizing: border-box;
  position: relative;
}

